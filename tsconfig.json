{
  "compilerOptions": {
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "CommonJS",
    "target": "ES5",
    "lib": ["ESNext"],
    "removeComments": true,
    "allowSyntheticDefaultImports": false,
    "allowJs": false,
    "baseUrl": "./",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "moduleResolution": "Node",
    "downlevelIteration": true,
    "strict": true,
    "rootDir": "./src",
    "outDir": "./build"
  },
  "include": [
    "**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}